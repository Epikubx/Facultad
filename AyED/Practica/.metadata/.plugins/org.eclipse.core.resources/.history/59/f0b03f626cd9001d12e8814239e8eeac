package Practica3;

import tp03.ejercicio1.*;

public class ProfundidadDeArbolBinario {

	private ArbolBinario<Integer> arbol;
	
	public ProfundidadDeArbolBinario(ArbolBinario<Integer> arbol){
		this.arbol = arbol;
	}
	
	public int sumaElementosProfundidad(int p){
		int suma = 0;
		if(arbol.tieneHijoIzquierdo()){
			suma += new ProfundidadDeArbolBinario(arbol.getHijoIzquierdo()).sumaElementosProfundidad(p);
		}
		if(arbol.tieneHijoDerecho()){
			suma += new ProfundidadDeArbolBinario(arbol.getHijoDerecho()).sumaElementosProfundidad(p);
		}
		return arbol.getDato() + suma;
	}
}
